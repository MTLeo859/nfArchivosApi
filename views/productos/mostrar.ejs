<%- include("../templates/encabezado")%>
<%- include("../templates/menu")%>

<div class="container">
    <div class="card mt-5">
        <div class="card-header"></div>
         <h1>Productos</h1>
        <div class="card-body"></div>
         
          <table  class="table table-hover">
              <thead>
                  <tr>
                     <th>Id</th>
                     <th>Nombre</th>
                     <th>foto</th>
                    
                     <th>Editar/Borrar</th>

                  </tr>
              </thead>
              <tbody>
                <%
                products.forEach((producto,i)=>{
                %>
                 <tr>
                     <td><%= (i+1)%></td>
                     <td><%=  producto.nombre%></td>
                     <th><img src="/images/<%= producto.foto%>" width="100px"></th>
                    
                     <td>
                        <a href="/producto/editarProducto/<%= producto.id%>">Editar</a>
                        <a href="/producto/borrarProducto/<%= producto.id%>">Borrar</a>
                     </td>
                 </tr>
                <%
                });
                %>

              </tbody>
          </table> 
         <div class="card-footer"></div>
     </div>
</div>
<%- include("../templates/pie.ejs")%>

