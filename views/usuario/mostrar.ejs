<%- include("../templates/encabezado")%>
<%- include("../templates/menu")%>

<div class="container">
    <div class="card mt-5">
        <div class="card-header"></div>
         <h1>Usuarios</h1>
        <div class="card-body"></div>
         
          <table  class="table table-hover">
              <thead>
                  <tr>
                     <th>Id</th>
                     <th>Nombre</th>
                     <th>Usuario</th>
                     <th>Password</th>
                     <th>foto</th>
                     <th>Editar/Borrar</th>

                  </tr>
              </thead>
              <tbody>
                <%
                users.forEach((usuario,i)=>{
                %>
                 <tr>
                     <td><%= (i+1)%></td>
                     <td><%=  usuario.nombre%></td>
                     <td><%=  usuario.usuario%></td>
                     <td>*******</td>
                     <td><img src="/images/<%= usuario.foto%>" width="100px"></td>
                     <td>
                        <a href="/editarUsuario/<%= usuario.id%>">Editar</a>
                        <a href="/borrarUsuario/<%= usuario.id%>">Borrar</a>
                     </td>
                 </tr>
                <%
                });
                %>

              </tbody>
          </table> 
         <div class="card-footer"></div>
     </div>
</div>
<%- include("../templates/pie.ejs")%>

